@inject ILanguageService LanguageService; 

<DatePicker ShowTime="@true" OnChange="OnChange"  CultureInfo="LanguageService.CurrentCulture"/>
<br />
<RangePicker ShowTime='@("HH:mm")' OnChange="OnChange"  CultureInfo="LanguageService.CurrentCulture"/>

@code
{
    private void OnChange(DateTime value, string dateString)
    {
        Console.WriteLine($"Selected Time: {value}");
        Console.WriteLine($"Formatted Selected Time: {dateString}");
    }
}