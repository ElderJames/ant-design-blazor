<Row Gutter="16">
    <Col Span="12">
        <CountDown Title="Countdown" Value="@_deadline" OnFinish="OnFinish" />
    </Col>
    <Col Span="12">
        <CountDown Title="Million" Value="@_deadline" Format="hh:mm:ss:fff" />
    </Col>
    <Col Span="24">
        <CountDown Title="Day Level" Value="@_deadline" Format="dd 天  h 小时 m 分钟 s 秒" />
    </Col>
</Row>

@code {
    private readonly DateTime _deadline = DateTime.Now.AddMilliseconds(1000 * 60 * 60 * 24 * 2 + 1000 * 30);

    private static void OnFinish()
    {
        Console.WriteLine("finished!");
    }
}