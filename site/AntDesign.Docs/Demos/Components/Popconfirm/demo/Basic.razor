@inject MessageService MessageService

<Popconfirm Title="Are you sure delete this task?"
            OnConfirm="Confirm"
            OnCancel="Cancel"
            OkText="Yes"
            CancelText="No">
    <a>Delete</a>
</Popconfirm>
<br />
<Popconfirm Title="Are you sure delete this task?"
            OnConfirm="Confirm"
            OnCancel="Cancel"
            OkText="Yes"
            CancelText="No">
    <Unbound>
        <a @ref="@context.Current">Delete (unbound)</a>
    </Unbound>
</Popconfirm>

@code {
    private void Confirm()
    {
        MessageService.Success("Clicked on Yes");
    }

    private void Cancel()
    {
        MessageService.Error("Clicked on No");
    }
}