<DemoCard>
    <Title>Basic usage</Title>
    <Description>Basic usage example.</Description>
    <Demo>
        <style>
            .example-input > span {
                width: 400px;
                margin: 0 8px 8px 0;
            }
        </style>
        <span class="example-input">
            <AntInput>123</AntInput>
            <AntInput placeholder="basic usage"></AntInput>
            <AntInput placeholder="allwoClear" allowClear></AntInput>
            <AntInput placeholder="disabled" disabled></AntInput>
        </span>
    </Demo>
</DemoCard>
<DemoCard>
    <Title>Input Size</Title>
    <Description>Input xxxxxxx。</Description>
    <Demo>
        <style>
            .example-input > span {
                width: 200px;
                margin: 0 8px 8px 0;
            }
        </style>
        <span class="example-input">
            <AntInput prefix="user" placeholder="large size" defaultValue="123" size="@AntInputSize.Large"
                      onChange="@((ChangeEventArgs args)=>OnChange(args, DateTime.Now.ToLongTimeString()))"
                      onPressEnter="@(()=>OnPressEnter())" allowClear></AntInput>
            <AntInput prefix="user" placeholder="default size"></AntInput>
            <AntInput prefix="user" Value="@str" placeholder="small size" size="@AntInputSize.Small"></AntInput>
        </span>
    </Demo>
</DemoCard>

@code
{
    string str = "hello world!";
    void OnChange(ChangeEventArgs args, string s)
    {
        System.Diagnostics.Debug.WriteLine("OnChange invoked.");
        str = args.Value.ToString();
    }

    void OnPressEnter()
    {
        System.Diagnostics.Debug.WriteLine("OnPressEnter invoked.");
        str = DateTime.Now.ToLongDateString();
    }
}

