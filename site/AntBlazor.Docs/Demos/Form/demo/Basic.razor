    <FormItem Label="Username" For="() => model.Username">
        <Input @bind-Value="@model.Username" />
    </FormItem>

    <FormItem Label="Password"
              For="() => model.Password">
        <InputPassword @bind-Value="@model.Password" />
    </FormItem>

    @*<FormItem For="() => model.RememberMe">
            <Checkbox @bind-Value="@model.RememberMe">Remember me</Checkbox>
        </FormItem>*@

    @*<FormItem Label="DateTest"
              For="() => model.DateTest">
        <DatePicker @bind-Value="@model.DateTest" />
    </FormItem>*@

    <FormItem TValue="string" WrapperCol="new ColLayoutParam{ Offset = 8, Span = 16 }">
        <Button Type="@ButtonType.Primary" HtmlType="submit">
            Submit
        </Button>
    </FormItem>
</Form>
@code
{
    public class Model
    {
        [Required]
        public string Username { get; set; }
        [Required]
        public string Password { get; set; }
        //public bool RememberMe { get; set; }
        //[Required]
        //public DateTime DateTest { get; set; }
    }

    private Model model = new Model();

    private void OnFinish(EditContext editContext)
    {
        Console.WriteLine($"Success:{JsonSerializer.Serialize(model)}");
    }

    private void OnFinishFailed(EditContext editContext)
    {
        Console.WriteLine($"Failed:{JsonSerializer.Serialize(model)}");
    }
}