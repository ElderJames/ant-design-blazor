@using System.Text.Json;

<DatePicker TValue="DateTime?" ShowTime="@true" OnChange="OnChange" />
<br />
<RangePicker TValue="DateTime?[]" ShowTime='@("HH:mm")' OnChange="OnRangeChange" />

@code
{
    private void OnChange(DateTime value, string dateString)
    {
        Console.WriteLine($"Selected Time: {value}");
        Console.WriteLine($"Formatted Selected Time: {dateString}");
    }

    private void OnRangeChange(DateTime?[] values, string[] dateStrings)
    {
        Console.WriteLine($"Selected Time: {JsonSerializer.Serialize(values)}");
        Console.WriteLine($"Formatted Selected Time: {JsonSerializer.Serialize(dateStrings)}");
    }
}