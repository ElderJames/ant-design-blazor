@namespace AntBlazor
@inherits AntRadioBase

<div @onclick="OnClick" class="@ClassMapper.Class" style="@Style" @attributes="Attributes" Id="@Id" @ref="Ref">
    <span class="@RadioClassMapper.Class">
        <input type="radio"
               autofocus="@AutoFocus"
               class="@InputClassMapper.Class"
               disabled="@disabled"
               checked="@isChecked"
               name="@name"
               value="@Value"
               @ref="inputRef" />
        <span class="@InnerClassMapper.Class"></span>
    </span>
    <span>@ChildContent</span>
</div>


