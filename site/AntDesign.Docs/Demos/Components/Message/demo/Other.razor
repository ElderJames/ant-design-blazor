@inject MessageService MessageService

<Space>
    <SpaceItem>
        <Button Type="default" OnClick="Success">
            Success
        </Button>
    </SpaceItem>
    <SpaceItem>
        <Button Type="default" OnClick="Error">
            Error
        </Button>
    </SpaceItem>
    <SpaceItem>
        <Button Type="default" OnClick="Warning">
            Warning
        </Button>
    </SpaceItem>
</Space>

@code {
    private async Task Success()
    {
        await MessageService.Success("This is a success message");
    }

    private async Task Error()
    {
        await MessageService.Error("This is an error message");

    }

    private async Task Warning()
    {
        await MessageService.Warning("This is a warning message");
    }
}
