@inject ModalService _modalService
@inject MessageService _message
<Space>
    <SpaceItem>
        <Button OnClick="@ShowConfirm">Confirm</Button>
    </SpaceItem>
    <SpaceItem>
        <Button OnClick="@ShowDeleteConfirm" Type="dashed">Delete</Button>
    </SpaceItem>

    <SpaceItem>
        <Button OnClick="@ShowPropsConfirm" Type="dashed"> With extra props</Button>
    </SpaceItem>
</Space>
<br />
<br />
<Space>
    <SpaceItem>
        <Button OnClick="@BlockingConfirm">Blocking Confirm</Button>
    </SpaceItem>
</Space>
@code{
    Func<ModalClosingEventArgs, Task> onOk = (e) =>
    {
        Console.WriteLine("Ok");
        return Task.CompletedTask;
    };
    Func<ModalClosingEventArgs, Task> onCancel = (e) =>
    {
        Console.WriteLine("Cancel");
        return Task.CompletedTask;
    };
    RenderFragment icon = @<Icon Type="exclamation-circle" Theme="outline"></Icon>;

    private async Task ShowConfirm()
    {
        await _modalService.Confirm(new ConfirmOptions()
        {
            Title = "Do you Want to delete these items?",
            Icon = icon,
            Content = "Some descriptions",
            OnOk = onOk,
            OnCancel = onCancel
        });
    }

    private async Task ShowDeleteConfirm()
    {
        await _modalService.Confirm(new ConfirmOptions()
        {
            Title = "Are you sure delete this task?",
            Icon = icon,
            Content = "Some descriptions",
            OnOk = onOk,
            OnCancel = onCancel,
            OkText = "Yes",
            OkType = "danger",
            CancelText = "No",
        });
    }

    private async Task ShowPropsConfirm()
    {
        await _modalService.Confirm(new ConfirmOptions()
        {
            Title = "Are you sure delete this task?",
            Icon = icon,
            Content = "Some descriptions",
            OnOk = onOk,
            OnCancel = onCancel,
            OkText = "Yes",
            OkType = "danger",
            CancelText = "No",
            OkButtonProps = new AntDesign.ButtonProps()
            {
                Disabled = true,
            }
        });
    }


    private async Task BlockingConfirm()
    {
        var confirmRef = await _modalService.Confirm(new ConfirmOptions()
        {
            Title = "Here is a blocking confirm, you can get OK or cancel button is click",
            Icon = icon,
            Content = "Some descriptions",
            OnOk = onOk,
            OnCancel = onCancel
        });

        var confirmResult = await confirmRef.ConfirmResult;

        if (confirmResult)
        {
            await _message.Info("OK button is clicked");
        }
        else
        {
            await _message.Info("cancel button is clicked");
        }
    }
}
