<div>
    <AntSwitch Checked="true" CheckedChildren='@("开")' UnCheckedChildren='@("关")'>
        
    </AntSwitch>
    <br />
    <AntSwitch Checked="false" CheckedChildren='@("开")' UnCheckedChildren='@("关")'>

    </AntSwitch>
    <br />
    <AntSwitch Checked="true" 
               CheckedChildren="checkedChildren" 
               UnCheckedChildren="unCheckedChildren">
    </AntSwitch>
</div>


@code{

    RenderFragment checkedChildren =@<AntIcon Type="check"></AntIcon>;

RenderFragment unCheckedChildren = @<AntIcon Type="close"></AntIcon>;
}
