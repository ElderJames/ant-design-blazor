                <AntButton Type="primary" @onclick="_=>open()">Open</AntButton>
            </div>
            <AntDrawer     Visible="visible" Placement="right" Title='("Basic Drawer")' OnClose="_=>close()">
                <p>Some contents...</p>
                <p>Some contents...</p>
                <p>Some contents...</p>
            </AntDrawer>
        </div>
    </Template>
</div>

   @code{

    bool visible = false;

    void open()
    {
        this.visible = true;
    }

    void close()
    {
        this.visible = false;
    }

}