@code{
    private Func<DateTime, DateTime, RenderFragment> CustomRender = (currentViewDate, today) =>
        {
            if (currentViewDate.Day == 2)
            {
                return@<span>二</span>;
}
return @<span>@(currentViewDate.Day)</span>;
};
}
