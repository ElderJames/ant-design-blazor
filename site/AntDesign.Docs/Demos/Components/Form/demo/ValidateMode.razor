@using System.ComponentModel.DataAnnotations;
@using System.Text.Json;

<Switch @bind-Value="@validateOnChange" CheckedChildren="ValidateOnChange" UnCheckedChildren="ValidateOnSubmit" />
<p />
<Form Model="@modelDefault"
        ValidateMode="@FormValidateMode.Default"
        ValidateOnChange="@validateOnChange"
        LabelColSpan="10"
        WrapperColSpan="14"
        Size="@AntSizeLDSType.Small">
    <FormItem Label="Default-UserName">
        <Input @bind-Value="@context.Username" />
    </FormItem>
    <FormItem WrapperColOffset="8" WrapperColSpan="16">
        <Button Type="@ButtonType.Primary" HtmlType="submit">
            Submit
        </Button>
    </FormItem>
</Form>


<Form Model="@modelRules"
        ValidateMode="@FormValidateMode.Rules"
        ValidateOnChange="@validateOnChange"
        LabelColSpan="10"
        WrapperColSpan="14"
        Size="@AntSizeLDSType.Small">
    <FormItem Label="Rules-UserName" Rules=@(new ValidationAttribute[]{ new RequiredAttribute(), new StringLengthAttribute(2) })>
        <Input @bind-Value="@context.Username" />
    </FormItem>
    <FormItem WrapperColOffset="8" WrapperColSpan="16">
        <Button Type="@ButtonType.Primary" HtmlType="submit">
            Submit
        </Button>
    </FormItem>
</Form>


<Form Model="@modelComplex"
        ValidateMode="@FormValidateMode.Complex"
        ValidateOnChange="@validateOnChange"
        LabelColSpan="10"
        WrapperColSpan="14"
        Size="@AntSizeLDSType.Small">
    <FormItem Label="Complex-UserName" Rules=@(new ValidationAttribute[]{ new RequiredAttribute(), new StringLengthAttribute(2) })>
        <Input @bind-Value="@context.Username" />
    </FormItem>
    <FormItem WrapperColOffset="8" WrapperColSpan="16">
        <Button Type="@ButtonType.Primary" HtmlType="submit">
            Submit
        </Button>
    </FormItem>
</Form>
@code
{
  public class Model
    {
        [Required]
        [StringLength(5)]
        public string Username { get; set; }
    }

    private Model modelDefault = new Model();
    private Model modelRules = new Model();
    private Model modelComplex = new Model();
    private bool validateOnChange = false;
    private FormValidateMode validateMode = FormValidateMode.Complex;
}