@if (addOnBefore is null && addOnAfter is null)
{
    @if (prefix is null && !visibilityToggle)
    {
        <input class="@ClassMapper.Class" style="@Style" @attributes="Attributes" Id="@Id" type="@_type"
               placeholder="@placeholder" value="@Value"
               @onchange="OnChangeAsync" @onkeypress="OnPressEnterAsync"
               @oninput="OnInputAsync" />
    }
    else
    {
        <span class="ant-input-password ant-input-affix-wrapper @_wrapperClass">
            @if (!(prefix is null))
            {
                <span class="ant-input-prefix">
                    @prefix
                </span>
            }

            <input class="@ClassMapper.Class" style="@Style" @attributes="Attributes" Id="@Id" type="@_type"
                   placeholder="@placeholder" value="@Value"
                   @onchange="OnChangeAsync" @onkeypress="OnPressEnterAsync"
                   @oninput="OnInputAsync" />
            @if (visibilityToggle)
            {
                <span class="ant-input-suffix">
                    <AntIcon class="ant-input-password-icon" type="@_eyeIcon" onclick="ToggleVisibility"></AntIcon>
                </span>
            }
        </span>
    }
}
else
{
    <span class="ant-input-group-wrapper">
        <span class="ant-input-wrapper ant-input-group">
            @if (!(addOnBefore is null))
            {
                <span class="ant-input-group-addon">
                    @addOnBefore
                </span>
            }
            @if (prefix is null && !visibilityToggle)
            {
                <input class="@ClassMapper.Class" style="@Style" @attributes="Attributes" Id="@Id" type="@_type"
                       placeholder="@placeholder" value="@Value"
                       @onchange="OnChangeAsync" @onkeypress="OnPressEnterAsync"
                       @oninput="OnInputAsync" />
            }
            else
            {
                <span class="ant-input-password ant-input-affix-wrapper @_wrapperClass">
                    @if (!(prefix is null))
                    {
                        <span class="ant-input-prefix">
                            @prefix
                        </span>
                    }

                    <input class="@ClassMapper.Class" style="@Style" @attributes="Attributes" Id="@Id" type="@_type"
                           placeholder="@placeholder" value="@Value"
                           @onchange="OnChangeAsync" @onkeypress="OnPressEnterAsync"
                           @oninput="OnInputAsync" />
                    @if (visibilityToggle)
                    {
                        <span class="ant-input-suffix">
                            <AntIcon class="ant-input-password-icon" type="@_eyeIcon" onclick="ToggleVisibility"></AntIcon>
                        </span>
                    }
                </span>
            }
            @if (!(addOnAfter is null))
            {
                <span class="ant-input-group-addon">
                    @addOnAfter
                </span>
            }
        </span>
    </span>
}