@inject ILanguageService LanguageService;

<RadioGroup @bind-Value="@datePickerSize">
    <Radio RadioButton Value="@DatePickerSize.Large">Large</Radio>
    <Radio RadioButton Value="@DatePickerSize.Default">Default</Radio>
    <Radio RadioButton Value="@DatePickerSize.Small">Small</Radio>
</RadioGroup>
<br />
<DatePicker Size="@datePickerSize"  CultureInfo="LanguageService.CurrentCulture" />
<br />
<DatePicker Picker="@DatePickerType.Month" Size="@datePickerSize"  CultureInfo="LanguageService.CurrentCulture"/>
<br />
<RangePicker Size="@datePickerSize"  CultureInfo="LanguageService.CurrentCulture"/>
<br />
<DatePicker Picker="@DatePickerType.Week" Size="@datePickerSize"  CultureInfo="LanguageService.CurrentCulture"/>

@code {
    private string datePickerSize = DatePickerSize.Default;
}