<div>
    <Progress Percent=_percent/>
    <AntButtonGroup>
        <AntButton Onclick=Decline Icon=Minus />
        <AntButton Onclick=Increase Icon=Plus />
    </AntButtonGroup>
</div>

@code{
    private int _percent = 0;

    private void Decline()
    {
        _percent -= 10;
        if (_percent < 0)
        {
            _percent = 0;
        }
    }

    private void Increase()
    {
        _percent += 10;
        if (_percent > 100)
        {
            _percent = 100;
        }
    }
}