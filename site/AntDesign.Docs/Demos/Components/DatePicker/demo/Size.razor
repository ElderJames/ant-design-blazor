    <Radio RadioButton Value="@AntDesign.DatePickerSize.Default">Default</Radio>
    <Radio RadioButton Value="@AntDesign.DatePickerSize.Small">Small</Radio>
</RadioGroup>
<br />
<DatePicker TValue="DateTime?" Size="@DatePickerSize"   />
<br />
<DatePicker TValue="DateTime?" Picker="@DatePickerType.Month" Size="@DatePickerSize"  />
<br />
<RangePicker TValue="DateTime?[]" Size="@DatePickerSize"  />
<br />
<DatePicker TValue="DateTime?" Picker="@DatePickerType.Week" Size="@DatePickerSize"  />

@code {
    private const string DatePickerSize = AntDesign.DatePickerSize.Default;
}