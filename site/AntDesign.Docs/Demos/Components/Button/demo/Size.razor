<div>
    <RadioGroup @bind-Value="@size">
        <Radio RadioButton Value="@ButtonSize.Large">Large</Radio>
        <Radio RadioButton Value="@ButtonSize.Middle">Default</Radio>
        <Radio RadioButton Value="@ButtonSize.Small">Small</Radio>
    </RadioGroup>
    <br />
    <br />
    <Button Type="@ButtonType.Primary" Size=@size>
        Primary
    </Button>
    <Button Size="@size">Default</Button>
    <Button Type="@ButtonType.Dashed" Size=@size>
        Dashed
    </Button>
    <br />
    <Button Type="@ButtonType.Link" Size=@size>
        Link
    </Button>
    <br />
    <Button Type="@ButtonType.Primary" Icon="download" Size=@size />
    <Button Type="@ButtonType.Primary" Shape="@ButtonShape.Circle" Icon="download" Size=@size />
    <Button Type="@ButtonType.Primary" Shape="@ButtonShape.Round" Icon="download" Size=@size />
    <Button Type="@ButtonType.Primary" Shape="@ButtonShape.Round" Icon="download" Size=@size>
        Download
    </Button>
    <Button Type="@ButtonType.Primary" Icon="download" Size=@size>
        Download
    </Button>
</div>

@code
{
    ButtonSize size = ButtonSize.Large;
}
