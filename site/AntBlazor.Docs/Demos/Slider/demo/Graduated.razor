<div>
    <h4>included=true</h4>
    <AntSlider Marks="@nMarks" DefaultValue="37" />
    <AntSlider Marks="@nMarks" DefaultValue="(26, 37)" />

    <h4>included=false</h4>
    <AntSlider Marks="@nMarks" Included="false" DefaultValue="37" />

    <h4>marks & step</h4>
    <AntSlider Marks="@nMarks" Step="10" DefaultValue="37" />

    <h4>step=null</h4>
    <AntSlider Marks="@nMarks" Step="null" DefaultValue="37" />

</div>

@code{
    private AntSliderMark[] nMarks =
{
            new AntSliderMark(0, "0℃"),
            new AntSliderMark(26, "26℃"),
            new AntSliderMark(37, "37℃"),
            new AntSliderMark(100, (b)=>{
                b.OpenElement(0,"strong");
                b.AddContent(1,"100℃");
                b.CloseElement();
            }, "color: #f50;")
        };
}