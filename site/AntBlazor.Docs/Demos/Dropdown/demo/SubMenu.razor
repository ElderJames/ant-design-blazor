<Dropdown>
    <Overlay>
        <Menu>
            <MenuItemGroup Title=@("Group title")>
                <MenuItem>1st menu item</MenuItem>
                <MenuItem>2nd menu item</MenuItem>
            </MenuItemGroup>
            <AntSubMenu Title=@("sub menu")>
                <MenuItem>3rd menu item</MenuItem>
                <MenuItem>4th menu item</MenuItem>
            </AntSubMenu>
            <AntSubMenu Title=@("disabled sub menu") Disabled>
                <MenuItem>5d menu item</MenuItem>
                <MenuItem>6th menu item</MenuItem>
            </AntSubMenu>
        </Menu>
    </Overlay>
    <ChildContent>
        <a class="ant-dropdown-link" @onclick:preventDefault>
            Cascading menu <AntIcon Type="down" />
        </a>
    </ChildContent>
</Dropdown>