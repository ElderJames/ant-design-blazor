<div>
    <Text>string</Text>
    <Input @bind-Value="@_str" />
    <p>value:@_str</p>
    <br />

    <Text>int</Text>
    <Input @bind-Value="@_int" />
    <p>value:@_int</p>
    <br />

    <Text>int?</Text>
    <Input Placeholder="Null" @bind-Value="@_intNull" />
    <p>value:@_intNull</p>
    <br />

    <Text>decimal</Text>
    <Input @bind-Value="@_dec" />
    <p>value:@_dec</p>
    <br />

    <Text>decimal?</Text>
    <Input Placeholder="Null " @bind-Value="@_decNull" />
    <p>value:@_decNull</p>
    <br />

    <Text>double</Text>
    <Input @bind-Value="@_double" />
    <p>value:@_double</p>
    <br />

    <Text>double?</Text>
    <Input Placeholder="Null " @bind-Value="@_doubleNull" />
    <p>value:@_doubleNull</p>
    <br />

    <Text>DateTime</Text>
    <Input @bind-Value="@_date" />
    <p>value:@_date</p>
    <br />

    <Text>DateTime?</Text>
    <Input Placeholder="Null" @bind-Value="@_dateNull" />
    <p>value:@_dateNull</p>

    <Text>Type=Number</Text>
    <Input Max="4" Type="number" Placeholder="0" @bind-Value="@_int" />
    <p>value:@_int</p>

</div>
@code {
    private string _str;
    private int _int;
    private int _intNum;
    private int? _intNull;
    private decimal _dec;
    private decimal? _decNull;
    private double _double;
    private double? _doubleNull;
    private DateTime _date;
    private DateTime? _dateNull;
}
