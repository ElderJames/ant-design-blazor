
<Slider Type="double" Value="_size" OnChange="v=>SetSize(v)" />
<br />
<br />
<Space Size="@($"{_size}")">
    <SpaceItem>
        <Button Type="primary">Primary</Button>
    </SpaceItem>
    <SpaceItem>
        <Button>Default</Button>
    </SpaceItem>
    <SpaceItem>
        <Button Type="dashed">Dashed</Button>
    </SpaceItem>
    <SpaceItem>
        <Button Type="link">Link</Button>
    </SpaceItem>
</Space>

@code {
    private double _size = 8;

    private void SetSize(double value)
    {
        _size = value;
        StateHasChanged();
    }
}