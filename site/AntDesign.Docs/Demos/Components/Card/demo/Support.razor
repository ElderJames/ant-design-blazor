<Row Gutter="16">
    <GridCol Span="8">
        <Card Style="width:300px;" Bordered Cover="_coverTemplate"
              Actions="@(new[] {
                ActionSetting(()=> OnClick("setting")) ,
                ActionEdit(()=> OnClick("edit")),
                ActionEllipsis(()=> OnClick("ellipsis")) })">
            <CardMeta AvatarTemplate="@_avatarTemplate" Title="Meta Card" Description="This is the description" />
        </Card>
    </GridCol>
    <GridCol Span="8">
        <Card Style="width:300px;" Bordered Cover="_coverTemplate">
            <ChildContent>
                <CardMeta AvatarTemplate="@_avatarTemplate" Title="Meta Card" Description="This is the description" />
            </ChildContent>
            <ActionTemplate>
                <CardAction><Icon Type="setting" OnClick="@(()=> OnClick("setting"))" /></CardAction>
                <CardAction><Icon Type="edit" OnClick="@(()=> OnClick("edit"))" /></CardAction>
                <CardAction><Icon Type="ellipsis" OnClick="@(()=> OnClick("ellipsis"))" /></CardAction>
            </ActionTemplate>
        </Card>
    </GridCol>
</Row>

@code {

    private RenderFragment ActionSetting(Action clickAction) => @<Icon Type="setting" OnClick="@clickAction"/>;

    private RenderFragment ActionEdit(Action clickAction) =>@<Icon Type="edit" OnClick="@clickAction"/>;

    private RenderFragment ActionEllipsis(Action clickAction) => @<Icon Type="ellipsis" OnClick="@clickAction"/>;

    private readonly RenderFragment _avatarTemplate = @<Avatar src="https://zos.alipayobjects.com/rmsportal/ODTLcjxAfvqbxHnVXCYX.png"></Avatar>;

    private readonly RenderFragment _coverTemplate = @<img alt="example" src="https://gw.alipayobjects.com/zos/rmsportal/JiqGstEfoWAOHiTxclqi.png"/>;

    private static void OnClick(string icon) => Console.WriteLine($"icon {icon} is clicked");
}


