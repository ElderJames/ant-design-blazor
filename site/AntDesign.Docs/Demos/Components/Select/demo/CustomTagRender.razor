@using AntDesign.Select
<Select Mode="multiple"
        DataSource="@_myColors"
        @bind-Values="@_selectedColorValues"
        ValueName="@nameof(MyColor.Value)"
		LabelName="@nameof(MyColor.Name)">
    <LabelTemplate>
        <LabelTemplateItem Context="item"
                           TItem="MyColor"
                           TItemValue="string"
                           Class="@("ant-tag ant-tag-" + context.Name)"
                           Style="margin-right: 4px;"
                           RemoveIconStyle="margin-top: 1px; display: inline-block;">
            <LabelTemplateItemContent>
                <span style="color: @((item as MyColor).Name);">@item.Name</span>
            </LabelTemplateItemContent>
        </LabelTemplateItem>
    </LabelTemplate>
</Select>

@code
{
    private class MyColor
    {
        public string Value { get; set; }
        public string Name { get; set; }
    }

    private List<MyColor> _myColors;
    private IEnumerable<string> _selectedColorValues;
    private bool _toggleSearch;

    protected override void OnInitialized()
    {
        _myColors = new List<MyColor>
        {
            new()
            {
                Value = "gold",
                Name = "gold"
            },
            new()
            {
                Value = "lime",
                Name = "lime"
            },
            new()
            {
                Value = "green",
                Name = "green"
            },
            new()
            {
                Value = "cyan",
                Name = "cyan"
            }
        };

        _selectedColorValues = new List<string> { "gold", "cyan" };
    }
}