@namespace AntDesign
@inherits AntDomComponentBase

<CascadingValue Value="this" IsFixed>
    <Tooltip Title="@toolTip(this)" Placement="@PlacementType.Right" Disabled="TooltipDisabled">
        <Unbound>
            <li class="@ClassMapper.Class" role="menuitem" style=" @(PaddingLeft>0? $"padding-left:{PaddingLeft}px;":"") @Style" @onclick="HandleOnClick" @key="Key" @ref="context.Current">
                @if (Icon != null)
                {
                    <Icon Type="@Icon" Theme="@IconTheme" />
                }

                @if (RouterLink == null)
                {
                    @content(this)
                }
                else
                {
                    <MenuLink Href="@RouterLink" Match="@RouterMatch">@content(this)</MenuLink>
                }
            </li>
        </Unbound>
    </Tooltip>
</CascadingValue>

@code {
    RenderFragment<MenuItem> content = item =>@<Template>
        <span>
            @if (item.Title != null)
            {
                @item.Title
            }
            else
            {
                @item.ChildContent
            }
        </span>
    </Template>;

RenderFragment<MenuItem> toolTip = item =>@<Template>
    @if (item.ToolTipTitle != null)
    {
        @item.ToolTipTitle
    }
    else
    {
        @item.content(item)
    }
</Template>;

}
