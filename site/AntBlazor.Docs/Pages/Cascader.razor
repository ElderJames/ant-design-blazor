    private static List<AntCascaderNode> GetManyNodes()
    {
        List<AntCascaderNode> nodes = new List<AntCascaderNode>() { };
        for (int i = 0; i < 8; i++)
        {
            List<AntCascaderNode> ilist = new List<AntCascaderNode>();
            AntCascaderNode node = new AntCascaderNode() { Value = i.ToString(), Label = i.ToString() };
            for (int j = 0; j < 5; j++)
            {
                List<AntCascaderNode> jlist = new List<AntCascaderNode>();
                AntCascaderNode nd = new AntCascaderNode() { Value = i + "" + j, Label = i + "-" + j };
                for (int k = 0; k < 6; k++)
                {
                    List<AntCascaderNode> klist = new List<AntCascaderNode>();
                    AntCascaderNode n = new AntCascaderNode() { Value = i + "" + j + "" + k, Label = i + "-" + j + "-" + k };
                    for (int l = 0; l < 7; l++)
                    {
                        klist.Add(new AntCascaderNode() { Value = i + "" + j + "" + k + "" + l, Label = i + "-" + j + "-" + k + "-" + l });
                    }
                    n.Children = klist.ToArray();
                    jlist.Add(n);
                }
                nd.Children = jlist.ToArray();
                ilist.Add(nd);
            }
            node.Children = ilist.ToArray();
            nodes.Add(node);
        }
        return nodes;
    }
